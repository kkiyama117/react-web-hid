{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "types": [
      "chrome-apps"
    ]
  },
  "include": [
    "./src/"
  ]
}
